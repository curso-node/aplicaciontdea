{{>headerD}}
<div class="container-fluid containerTop ">
  <table class="table table-bordered">
  	<thead>
      <tr>
        <th scope="col">{{estudiante.personas.nombre}}Usuario</th>
        <th scope="col" colspan="3">Identidad</th>
      </tr>
    </thead>
    {{estudiante.nombre}}
    {{#each estudiante}}
      <tbody>
          <tr>
            <td>{{this.nombre}}</td>
            <td>{{this.identidad}}</td>
            <td><button type="button" class="btn btn-success" data-toggle="modal" data-target='#{{this.identidad}}'>Mas informaci√≥n</button></td>
          </tr>
      </tbody>
      <div class="modal fade" id='{{this.identidad}}' tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel"><b>{{this.nombre}}</b></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <b><p>Identidad: <span>{{this.identidad}}</span></p></b>
                <b><p>Correo: <span>{{this.correo}}</span></p></b>
                <b><p>Telefono : <span>{{this.telefono}}</span></p></b>
                <b><p>Rol : <span>{{this.rol}}</span></p></b>
              </div>
              <div class="modal-footer">
              </div>                          
          </div>
        </div>
      </div>
    {{/each}}
  </table>
</div>
{{>footer}}
{{>header}}

<div class="container-fluid containerTop">
  <section id="cursosAbiertos" class="container-fluid text-center">
    <h1>Cursos creados</h1>
      <ul class="row">
      {{#each listadoCursos}}
      <li class="col-md-3">
        <div class="informacionCurso">
          <figcaption>
              <figure>
                  <img src="/img/programas/{{this.categoria}}.jpg">
              </figure>
            </figcaption>
            <div class="datosdelCurso">
              <h3>{{this.nombre}}</h3>
              <p>Costo: <span>${{this.costo}}</span></p>
              <p> Modalidad: <span>{{this.modalidad}}</span></p>
              <button type="button" class="btn btn-primary" data-toggle="modal" data-target='#{{this.id}}'>Mas información</button>
              <div class="modal fade" id='{{this.id}}' tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                      <div class="modal-dialog" role="document">
                        <div class="modal-content">
                          <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                              <span aria-hidden="true">&times;</span>
                            </button>
                          </div>
                          <div class="modal-body">
                            <h3>{{this.nombre}}</h3>
                            <p>Costo $: <span>{{this.costo}}</span></p>
                            <p>Modalidad: <span>{{this.modalidad}}</span></p>
                            <p>Duración : <span>{{this.duracion}}</span></p>
                            <div> 
                              <h4>Descripción:</h4>                            
                              <p class="descripcionCurso">{{this.descripcion}}</p>
                            </div>
                          </div>
                          <div class="modal-footer">
                              <form action="/dashboard/inscritos" method="post">
                                <input type="hidden" name="idCur" value="{{this._id}}">
                                <input type="submit" class="btn btn-primary" value="Inscritos">
                              </form>                               
                          </div>
                        </div>
                      </div>
                    </div>
            </div>
        </div>
      </li>  
    {{/each}}
    </ul>
  </section>
</div>

{{>footer}}